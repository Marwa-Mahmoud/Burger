<div class="container">
    <div class="row" >
        <div class="column  text-center">
        
        <h1>Eat Da Burger</h1>
        <img src="assets/img/burger.jpg" alt="Burger Image" style="width:304px;height:228px;">
        <form action="/" method="POST">
            <input type="text" name="burgerName">
            <button type="submit">Submit</button>
        </form>
    </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                    {{burger_name}} 
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" >Devour It!</button>
                    </form>
                </li>
            {{/unless}}
            {{/each}} 
            </ul>
        </div>
        <div class="col-md-4">
            <ul>
            {{#each burgers}}
            {{#if this.devoured}}
                <li>
                {{this.burger_name}}
                </li>
            {{/if}}
            {{/each}}
            </ul>
        </div>

    </div>
</div>
